<resources>
    <!-- Base application theme. -->
    <style name="Theme.ITBookStore" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_gray_bg</item>
        <item name="colorPrimaryVariant">@color/darker_gray_bg</item>
        <item name="colorOnPrimary">@color/darker_gray_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenIconBackgroundColor">@color/darker_gray_bg</item>
        <item name="windowSplashScreenBackground">@color/darker_gray_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.ITBookStore</item>
    </style>
</resources>